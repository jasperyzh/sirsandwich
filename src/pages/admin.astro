---
import Layout from '../layouts/Layout.astro';
import SupabaseAdminDashboard from '../components/SupabaseAdminDashboard.vue';
---

<Layout title="Admin Dashboard - Sirsandwich Shop" description="Admin interface for managing products and orders at Sirsandwich Shop">
  <main class="container mx-auto px-4 py-8">
    <!-- Header -->
    <header class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-800 mb-4">🔧 Admin Dashboard</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Manage your sandwich shop products, inventory, and settings
      </p>
      <div class="mt-6 bg-green-50 rounded-lg p-4 max-w-2xl mx-auto">
        <p class="text-sm text-green-800">
          <strong>🔐 Live Database:</strong> This admin interface is now connected to your Supabase database with real authentication and permissions.
        </p>
      </div>
    </header>

    <!-- Admin Dashboard Component -->
    <SupabaseAdminDashboard client:visible />

    <!-- Navigation Links -->
    <div class="text-center mt-12 space-x-4">
      <a href="/products" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-6 rounded-lg transition duration-300">
        View Store
      </a>
      <a href="/" class="bg-gray-500 hover:bg-gray-600 text-white font-semibold py-3 px-6 rounded-lg transition duration-300">
        ← Back to Home
      </a>
    </div>
  </main>
</Layout> 